@model FrontEndComplete.Models.DonorModel

@{
    ViewBag.Title = "Donor";
}

<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>

<div class="container" style="width:100%; margin-top:12%">
    <div class="panel panel-body">
        <div class="col-md-3">
            @{ Html.RenderAction("SideMenu", "Home"); }
        </div>


        <div class="col-md-9">
            <h2>Recipient</h2>
            <div>
                <a href="#" class="btn btn-primary" onclick="AddEditDonor(0)"><i class="glyphicon glyphicon-plus"></i>Add a recipient</a>
            </div>

                        @Html.TextBoxFor(m => m.DonorFirstName, new { @class = "form-control", @placeholder = "Search here" })
                        <img src="~/Content/giphy-downsized.gif" id="loaderDiv" height="20" width="20" style="display:none"/>

            <table class="table table-responsive">

                <tr>
                    <th>Donor Id</th>
                    <th>Active donor</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Blood type</th>
                    <th>Rh factor</th>
                    <th>Date of birth</th>
                    <th>Weight</th>
                    <th>Email</th>
                    <th>Phone number</th>
                    <th>Last screening date</th>
                    <th></th>
                </tr>

                <tbody id="donorRow">

        @if (ViewBag.DonorsList != null)
            {
                foreach (var item in ViewBag.DonorsList)
                {
                            <tr id="row_@item.DonorID">
                                <td>@item.DonorID</td>
                                <td>@item.ActiveDonor</td>
                                <td>@item.DonorFirstName</td>
                                <td>@item.DonorLastName</td>
                                <td>@item.BloodType</td>
                                <td>@item.RhFactor</td>
                                <td>@item.DateOfBirth</td>
                                <td>@item.Wight</td>
                                <td>@item.DonorEmail</td>
                                <td>@item.DonorPhoneNumber</td>
                                <td>@item.LastScreeningDate</td>
                                <td><a href="#" class="btn btn-danger" onclick="ConfirmDelete(@item.DonorID)"><i class="glyphicon glyphicon-trash"></i></a> </td>
                                <td><a href="#" class="btn btn-success" onclick="ShowDonor(@item.DonorID)"><i class="glyphicon glyphicon-eye-open"></i></a> </td>
                                <td><a href="#" class="btn btn-success" onclick="AddEditDonor(@item.DonorID)"><i class="glyphicon glyphicon-pencil"></i></a> </td>
                            </tr>
                        }
                    }
                    <tr></tr>
                </tbody>
            </table>

            </div>

            <div class="modal fade" id="myDeleteModal">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <div class="modal-header">
                            <a href="#" class="close" data-dismiss="modal">&times;</a>
                            <h3 class="modal-title">Delete Donor</h3>
                        </div>

                        <div class="modal-body">
                            <h4>Are you sure you want to delete this donor?</h4>
                            <div style="text-align:center; display:none" id="loader">
                                <img src="~/Content/giphy-downsized.gif" width="150" /> @*This is a page is loading gif*@
                            </div>
                        </div>

                        <div class="modal-footer">
                            <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                            <a href="#" class="btn btn-success" onclick="DeleteDonor()">Confirm</a> @*When clicking on the btn, The function DeleteDonation is called, and record is deleted from database*@
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="myShowModal">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <div class="modal-header">
                            <a href="#" class="close" data-dismiss="modal">&times;</a>
                            <h3 class="modal-title">Show Recipient</h3>
                        </div>

                        <div class="modal-body" id="showModalBody">

                        </div>

                        <div class="modal-footer">
                            <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                            <a href="#" class="btn btn-success" onclick="DeleteDonation()">Confirm</a> @*When clicking on the btn, The function DeleteDonation is called, and record is deleted from database*@
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="myAddEditModal">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <div class="modal-header">
                            <a href="#" class="close" data-dismiss="modal">&times;</a>
                            <h3 class="modal-title">Add or Edit Recipient</h3>
                        </div>

                        <div class="modal-body" id="myAddEditModalBody">

                        </div>


                    </div>
                </div>
            </div>

            <input class="hidden" id="hiddenDonor" />
        </div>
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

 <script>

     $(document).ready(function () {

         $("#DonorFirstName").keydown(function () {

             $("#loaderDiv").show();

             var searchtext = $(this).val();

             $.ajax({

                 type: "POST",
                 url: "/Donor/GetSearchDonor?SearchText=" + searchtext,
                 contentType: "html",
                 success: function (response) {

                     $("#loaderDiv").hide();
                     $("#donorRow").html(response);
                 }
             })
         })
     })

        var ConfirmDelete = function (donorID) {

            $("#hiddenDonor").val(donorID);
            $("#myDeleteModal").modal("show");
        }

        var DeleteDonor = function () {

            $("#loader").show();

            var donorID = $("#hiddenDonor").val();
            @*--Ajax call to delete the record-- *@
            $.ajax({

                type: "POST",
                url: "/Donor/DeleteDonor",
                data: { donorID: donorID },
                success: function (result) {
                    $("#loader").hide();
                    $("#myDeleteModal").modal("hide");

                    @*--Remove the deleted row-- *@
                    $("#row_" + donorID).remove();
                }
            });

        }

        var ShowDonor = function (donorID) {

            var url = "/Donor/ShowDonorDetail?DonorID=" + donorID;
                $("#showModalBody").load(url, function () {
                    $("#myShowModal").modal("show");
                })

        }

        var AddEditDonor = function (donorID) {

            var url = "/Donor/AddEditDonor?DonorID=" + donorID;
            $("#myAddEditModalBody").load(url, function () {
                $("#myAddEditModal").modal("show");
            })
        }

</script>

        }




