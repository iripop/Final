<!--Current layout-->

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                <a class="navbar-brand" href="/Home/Index/"><strong><span class="fa fa-home" style="color:white"></span> Home</strong></a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/Donor/Donor/"><strong><span class="fa fa-heartbeat" style="color:white"></span> Donors</strong></a></li>
                    <li><a href="/Donation/Donation/"><strong><span class="glyphicon glyphicon-tint" style="color:white"></span> Donations</strong></a></li>
                    <li><a href="/DonationSite/DonationSite/"><strong><span class="glyphicon glyphicon-map-marker" style="color:white"></span> DonationSite</strong></a></li>
                    <li><a href="/Recipient/Recipients/"><strong><span class="fa fa-ambulance" style="color:white"></span> Recipients</strong></a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                   
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><strong><span class="fa fa-user-md"></span> Hello, @HttpContext.Current.User.Identity.Name!</strong><span class="fa fa-chevron-down"></span></a>
                        <ul class="dropdown-menu" role="menu" id="myTab">
                            <li><a href="/Donor/Donor/"><span class="fa fa-user-md" style="color:darkred"></span> Profile</a></li>
                            <li class="divider"></li>
                            <li><a href="/Manage/ChangePassword/"><span class="fa fa-cogs" style="color:darkred"></span> Change password</a></li>
                            <li class="divider"></li>
                            <li>
    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("Logout", "User", FormMethod.Post, new { id = "logoutForm" }))
        {
                                        <a href="javascript:document.getElementById('logoutForm').submit()"><span class="fa fa-sign-out" style="color:darkred"></span> Sign Out</a>
                                    }
                                }
                            </li>
                        </ul>
                    </li>
                    
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><strong><span class="fa fa-cogs"> </span></strong><span class="fa fa-chevron-down"></span></a>
                        <ul class="dropdown-menu" role="menu" id="myTab">
                            <li><a href="/Home/Registration/"><span class="fa fa-plus" style="color:darkred"></span> Add user</a></li>
                            <li class="divider"></li>
                            <li><a href="/Manage/Users/"><span class="fa fa-users" style="color:darkred"></span> Users</a></li>
                            <li class="divider"></li>
                            <li><a href="/Home/Contact/"><span class="fa fa-phone" style="color:darkred"></span> Contact</a></li>
                            <li class="divider"></li>
                            <li><a href="/Home/About/"><span class="fa fa-exclamation" style="color:darkred"></span> About</a></li>
                        </ul>

                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>
  
    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <h1><small>Blood Donations Management System</small></h1>
                </div>
                <div class="col-md-2">
                    <div class="dropdown create">
                        <button class="btn btn-danger dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Sent notification
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <li><a href="#">Blood shortage</a></li>
                            <li><a href="#">New blood drive</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container body-content">

        @RenderBody()

        <hr />

    </div>

    <footer id="footer">
        <p>Copyright Irina Pop, &copy; 2017</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)


</body>
</html>