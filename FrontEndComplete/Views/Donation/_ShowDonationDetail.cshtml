
    <table class="table table-bordered">
        @if (ViewBag.DonationsList != null)
        {
            foreach (var item in ViewBag.DonationsList)
            {
                <tr>
                    <td><b>ID</b></td>
                    <td>@item.DonationID</td>
                </tr>
                <tr>
                    <td><b>Donation Type</b></td>
                    <td>@item.DonationType</td>
                </tr>
                <tr>
                    <td><b>Blood Type</b></td>
                    <td>@item.CrossBloodType</td>
                </tr>
                <tr>
                    <td><b>Rh Factor</b></td>
                    <td>@item.CrossRhFactor</td>
                </tr>
                <tr>
                    <td><b>Number of units</b></td>
                    <td>@item.NumberOfUnits</td>
                </tr>
                <tr>
                    <td><b>Donor</b></td>
                    <td>@item.DonorFullName</td>
                </tr>
                <tr>
                    <td><b>Recipient</b></td>
                    <td>@item.RecipientCodedName</td>
                </tr>
                <tr>
                    <td><b>Donation site</b></td>
                    <td>@item.SiteName</td>
                </tr>
                <tr>
                    <td><b>Donation date</b></td>
                    <td>@item.CreationDate</td>
                </tr>
                <tr>
                    <td><b>Expiration date</b></td>
                    <td>@item.ExpirationDate</td>
                </tr>
                <tr>
                    <td><b>Accepted donation?</b></td>
                    <td>@item.Accepted</td>
                </tr>
                <tr>
                    <td><b>Reason for rejection</b></td>
                    <td>@item.ReasonForRejection</td>
                </tr>

            }

        }

    </table>


